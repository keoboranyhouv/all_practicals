BoxLayout:
    orientation: 'vertical'
#    orientation: 'horizontal'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        Button:
            text: 'Clear'
            on_press: app.handle_clear()
            size_hint_x: 0.15
        TextInput:
            id: input_name
            text: ''
            size_hint_x: 0.7
        Button:
            text: 'Greet'
            on_press: app.handle_greet()
            size_hint_x: 0.15
    Label:
        id: output_label
        size_hint_y: 0.8
        text: 'Enter your name'
        font_size: 60
        color: (1, 1, 0, 1)

